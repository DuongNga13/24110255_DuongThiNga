#include <iostream>
using namespace std;

int fib(int n) {
    if (n <= 1){
        return n;
    } 
    int a = 0, b = 1, c;
    for (int i = 2; i <= n; i++) {
        c = a + b;
        a = b;
        b = c;
    }
    return b;
}

int main() {
    int n;
    cout << "Nhap so phan tu (n) cua day Fibonacci (n nguyen duong): ";
    cin >> n;
    cout << "Gia tri cua phan tu thu " << n << ": F(" << n << ") = " << fib(n) << "\n";
    cout << "Day Fibonacci: ";
    for (int i = 0; i <= n; i++) {
        cout << fib(i) << " ";
    }
    return 0;
}
