#include <iostream>
using namespace std;

int ways(int n) {
    if (n <= 1){
        return n;
    } 
    //Buoc len bac 1 co 1 cach, bac 2 co 2 cach. ways[n] = ways[n - 1] + ways[n - 2]
    int a = 1, b = 2, c;
    for (int i = 2; i <= n; i++) {
        c = a + b;
        a = b;
        b = c;
    }
    return b;
}

int main() {
    int n;
    do {
        cout << "Nhap so bac thang can len n (n nguyen duong): ";
        cin >> n;
        if (n <= 0)
            cout << "n khong hop le! Vui long nhap lai.\n";
    } while (n <= 0);
    cout << "So cach buoc len " << n << " bac thang la: " << ways(n) << "\n";
}
