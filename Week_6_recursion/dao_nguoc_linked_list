#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};
Node* createNode(int value) {
    return new Node{value, NULL};
}
void print(Node* head) {
    while (head != NULL) {
        cout << head->data << " ";
        head = head->next;
    }
    cout << endl;
}
Node* reverse(Node* head) {
    Node* prev = NULL;
    Node* curr = head;
    Node* next = NULL;

    while (curr != NULL) {
        next = curr->next;
        curr->next = prev;
        prev = curr;
        curr = next;
    }
    return prev; 
}

int main() {
    int n;
    cout << "Nhap so phan tu cua linked list (n): ";
    cin >> n;
    Node* head = NULL;
    Node* tail = NULL;
    cout << "Nhap " << n << " phan tu: ";
    for (int i = 0; i < n; i++) {
        int x;
        cin >> x;
        Node* newNode = createNode(x);
        if (head == NULL) {
            head = newNode;
            tail = newNode;
        } else {
            tail->next = newNode;
            tail = newNode;
        }
    }

    cout << "Danh sach ban dau: ";
    print(head);
    head = reverse(head);
    cout << "Sau khi dao: ";
    print(head);
    return 0;
}
