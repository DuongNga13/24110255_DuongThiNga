#include <iostream>
using namespace std;

void reverseArray(int arr[], int start, int end) {
    if (start >= end) {
        return;
    }
    
    int temp = arr[start];
    arr[start] = arr[end];
    arr[end] = temp;
    
    reverseArray(arr, start + 1, end - 1);
}

// HÃ m in máº£ng
void printArray(int arr[], int n) {
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

int main() {
    int n;
    
    cout << "Nhap so phan tu cua mang: ";
    cin >> n;
    
    int arr[n];
    
    cout << "Nhap " << n << " phan tu:\n";
    for (int i = 0; i < n; i++) {
        cout << "arr[" << i << "] = ";
        cin >> arr[i];
    }
    
    cout << "\nMang ban dau: ";
    printArray(arr, n);
    
    reverseArray(arr, 0, n - 1);
    
    cout << "Mang sau khi dao nguoc: ";
    printArray(arr, n);
    
    return 0;
}
