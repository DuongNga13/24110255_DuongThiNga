#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};

int count(Node* head) {
    if (head == NULL) return 0;
    return 1 + count(head->next);
}

void print(Node* head) {
    while (head != NULL) {
        cout << head->data << " ";
        head = head->next;
    }
    cout << endl;
}

void append(Node** head, int value) {
    Node* newNode = new Node{value, NULL};
    if (*head == NULL) {
        *head = newNode;
        return;
    }
    Node* temp = *head;
    while (temp->next != NULL) {
        temp = temp->next;
    }
    temp->next = newNode;
}

int main() {
    Node* head = NULL;
    int value;
    cout << "Nhap cac gia tri (nhap -1 de dung):\n";
    while (true) {
        cout << "Nhap vao 1 gia tri: ";
        cin >> value;
        if (value == -1) break;
        append(&head, value);
    }
    cout << "\nDanh sach: ";
    print(head);
    cout << "So phan tu la: " << count(head) << endl;
    return 0;
}
